type SelectProps = {
  options: string | number[],
  state: [any, ((new: any)=> void)],
  formatValue: (val: any) => ReactNode
}
const Select = ({ options, state, formatValue }) => {
  const [value, setValue] = state;
  const [opened, setOpened] = useState(false);
  return (
    <View>
      {opened && (
        <View>
          {options.
</View>
      )}
    </View>
  )
}
